echo "ğŸ” Running ESLint..."
pnpm lint || {
  echo ""
  echo "ğŸš« ESLint found issues! Please fix them before committing."
  echo ""
  exit 1
}

echo "ğŸ” Running Cypress component tests..."
pnpm cy:run || {
  echo ""
  echo "ğŸš« Cypress tests failed! Please fix them before committing."
  echo ""
  exit 1
}

echo "ğŸ” Validating commit message..."
COMMIT_MSG="$(git log -1 --pretty=%B)"
echo "$COMMIT_MSG" | pnpm exec commitlint || {
  echo ""
  echo "ğŸš« Invalid commit!"
  echo "Your commit message must follow Conventional Commits:"
  echo "Format: <type>[optional scope]: <description>"
  echo "Example: feat(router): add login route"
  echo ""
  exit 1
}

echo "âœ… ESLint and Cypress checks passed!"